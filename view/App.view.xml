<!-- view.xml as same as template in Vue's component to display page  -->
<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Button
    text="Say Hello"
    press=".onShowHello"/>
  <!-- declare the path in {...} to bind the mode's value  -->
  <Input
    value="{/recipient/name}"
    description="Hello {/recipient/name}"
    valueLiveUpdate="true"
    width="60%"/>
</mvc:View>